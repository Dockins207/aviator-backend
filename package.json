{
  "name": "aviator",
  "version": "1.0.0",
  "description": "Full-stack Aviator game application",
  "private": true,
  "workspaces": [
    "backend",
    "database"
  ],
  "scripts": {
    "start": "cd backend && npm install --production && npm start",
    "build": "cd backend && npm install --production && npm run build",
    "dev": "cd backend && npm install && npm run dev",
    "test": "cd backend && npm test",
    "lint": "cd backend && npm run lint",
    "install:prod": "npm install --production && cd backend && npm install --production"
  },
  "keywords": [
    "aviator",
    "game",
    "node",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-pg-migrate": "^7.9.1",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.3",
    "sequelize": "^6.37.5",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/aviator.git"
